<Window x:Class="WpfRoutedEvent_1_T3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_1_T3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        TextBoxBase.TextChanged="Window_TextChanged_1">
    <Grid TextBoxBase.TextChanged="Grid_TextChanged_1">
        <TextBox HorizontalAlignment="Left" Height="99" Margin="378,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182" TextChanged="TextBox_TextChanged"/>
        <RadioButton x:Name="radBut1" Content="Обработка события в Textbox" HorizontalAlignment="Left" Margin="91,94,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut2" Content="Обработка события в Grid" HorizontalAlignment="Left" Margin="91,134,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="radBut3" Content="Обработка события в Window" HorizontalAlignment="Left" Margin="91,178,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
